<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.unicorn.location</groupId>
  <artifactId>unicorn-location-lambda-layer</artifactId>
  <name>unicorn-location-lambda-layer</name>
  <version>1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration />
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>software.amazon.awssdk</groupId>
        <artifactId>bom</artifactId>
        <version>${aws.java.sdk.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <aws.lambda.java.core.version>1.2.2</aws.lambda.java.core.version>
    <maven.compiler.target>11</maven.compiler.target>
    <aws.java.sdk.version>2.18.26</aws.java.sdk.version>
    <org.slf4j.version>2.0.5</org.slf4j.version>
    <maven.compiler.source>11</maven.compiler.source>
    <org.projectlombok.version>1.18.24</org.projectlombok.version>
    <aws.lambda.java.events.version>3.11.0</aws.lambda.java.events.version>
    <com.google.code.gson.version>2.10</com.google.code.gson.version>
    <maven.shade.plugin.version>3.2.4</maven.shade.plugin.version>
  </properties>
</project>
